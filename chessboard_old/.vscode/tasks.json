{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ compilar archivo activo",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.o"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: /usr/bin/g++"
		},
		{
			"label": "Run C/C++",
			"command": "${fileDirname}/${fileBasenameNoExtension}.o",
			"dependsOn": [
				"C/C++: g++ compilar archivo activo"
			],
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}